set header_cache         = ~/.cache/neomutt/home/headers
set message_cachedir     = ~/.cache/neomutt/home/bodies
set realname             = "`pass Home/Gmail/realname`"
set from                 = "`pass Home/Gmail/email`"
unset record                  # useless with gmail
# main boxes
set folder    = $MAILDIR/home  # mailbox location
set spoolfile = "+Inbox"       # default inbox.
set postponed = "+drafts"
set trash     = "+trash"
#
set my_spool   = $spoolfile
set my_archive = $mbox
set my_trash   = $trash
set my_sent    = $sent
set my_drafts  = $postponed

# mailboxes to show in the sidebar.
# #mailboxes `cd ~/Mail/home &&  fd -t d | rg -v "cur|new|tmp" | xargs printf "'=%s' "`
mailboxes `cd ~/Mail/home && fd -t d -E cur -E new -E tmp --exec printf "=%s "`

